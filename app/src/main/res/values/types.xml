<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.MovieBD.Headline">
        <item name="fontFamily">@font/merriweather_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="Theme.MovieBD.SubTitle">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MovieBD.Body">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Theme.MovieBD.Body.DarkBlue">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/dark_blue</item>
    </style>

    <style name="Theme.MovieBD.Body.Hours">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="Theme.MovieBD.Genres">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">8sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">@color/light_purple</item>
    </style>

    <style name="Theme.MovieBD.PhotoGrid">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">@dimen/margin_tiny_2</item>
        <item name="cornerSizeTopRight">@dimen/margin_tiny_2</item>
        <item name="cornerSizeBottomLeft">@dimen/margin_tiny_2</item>
        <item name="cornerSizeBottomRight">@dimen/margin_tiny_2</item>
    </style>

    <style name="Theme.MovieBD.DetailTitle">
        <item name="fontFamily">@font/mulish_bold</item>
        <item name="android:textSize">20sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.MovieBD.Seemore">
        <item name="fontFamily">@font/mulish_regular</item>
        <item name="android:textSize">10sp</item>
        <item name="android:letterSpacing">0.02</item>
        <item name="android:textColor"> #AAA9B1</item>
    </style>
</resources>